---
import BaseLayout from '../layouts/BaseLayout.astro';

const features = [
  { icon: '🌿', label: 'アロマハーブボール', description: 'タイ産ハーブで作られた温熱ボールで深くリラックス' },
  { icon: '👐', label: '古式ストレッチ', description: '2000年の歴史を持つ伝統的な技法で全身をほぐす' },
  { icon: '✨', label: '完全個人施術', description: 'お一人ずつゆっくり丁寧に施術させていただきます' }
];

const shopFeatures = [
  {
    title: '本格的な技法',
    points: [
      'タイ政府公認の資格を持つ経験豊富なセラピスト',
      '2000年以上の歴史を持つタイ古式マッサージの伝統技法',
      '一人ひとりの体調に合わせたオーダーメイド施術'
    ]
  },
  {
    title: '至福の空間',
    points: [
      'タイの寺院をイメージした静謐な空間設計',
      'アロマとハーブの香りで五感を癒やす',
      '都会の喧騒から離れた心静かなひととき'
    ]
  }
];

const dailyRecommendations = [
  {
    time: 'Morning',
    label: '朝 — 体の目覚めをサポート',
    menu: 'タイ古式ストレッチ 60分',
    detail: '朝の身体をやさしくほぐし、一日の活力をサポート。呼吸と共に行う古式のストレッチで巡りを整えます。',
    accent: '初回限定 10%オフ'
  },
  {
    time: 'Day',
    label: '昼 — 仕事のリフレッシュ',
    menu: 'ハーバルボールケア 90分',
    detail: '温熱ハーブボールで首・肩の凝りをほぐし、午後も快適に過ごせます。',
    accent: 'ビジネスランチタイム対応'
  },
  {
    time: 'Night',
    label: '夜 — 深い休息とリラクゼーション',
    menu: 'アロマリラックス 120分',
    detail: '精油マッサージで全身をリラックス。翌朝も爽やかさが持続します。',
    accent: '最終受付まで対応'
  }
];

const courses = [
  {
    name: 'Thai Traditional Massage',
    nameJP: 'タイ古式マッサージ',
    duration: '60分',
    price: '4,800円',
    ideal: '初回の方におすすめ',
    effects: ['全身のストレッチと指圧', '血行促進', 'コリの解消'],
    result: '姿勢が良くなり、疲労回復に効果的。古式の技法で深くほぐします。'
  },
  {
    name: 'Herbal Ball Therapy',
    duration: '90分',
    price: '6,800円',
    ideal: '肩こり・腰痛の方に',
    effects: ['温熱ハーブボール', '深部温め', '疲労回復', 'デトックス効果'],
    result: '温めることで筋肉の深部までほぐし、翌日まで続く軽さを実感'
  },
  {
    name: 'Aromatherapy Relaxation',
    duration: '120分',
    price: '9,800円',
    ideal: 'ギフト・ご褒美ケア',
    effects: ['精油マッサージ', '完全リラクゼーション', '自律神経調整', 'アフターケア'],
    result: '五感を満たす贅沢なひととき。心身ともに深く癒やされます。'
  }
];

const treatmentSteps = [
  {
    title: '01. カウンセリング',
    description: 'お身体の状態やお悩みをお伺いします。施術の強さやお好みを確認し、最適なプランをご提案いたします。',
    icon: '💬'
  },
  {
    title: '02. 着替え・準備',
    description: 'リラックスできるお着替えをご用意しております。アメニティはすべて完備しておりますので手ぶらでお越しください。',
    icon: '👕'
  },
  {
    title: '03. 施術',
    description: 'タイ古式マッサージの技法で、やさしく丁寧に施術いたします。お身体の声を聞きながら、一人ひとりに合わせた施術を行います。',
    icon: '👐'
  },
  {
    title: '04. アフターケア',
    description: '施術後はハーブティーと共に、ゆっくりとおくつろぎいただけます。セルフケアの方法もご案内いたします。',
    icon: '☕'
  }
];

const voices = [
  {
    name: 'T様',
    role: '会社員 / 30代',
    message: '「肩こりがひどくて来店しましたが、施術後は本当に身体が軽くなりました。週1で通っています！」'
  },
  {
    name: 'M様',
    role: '主婦 / 40代',
    message: '「初めてのタイ古式マッサージでしたが、とても優しく丁寧に施術していただき感動しました。リピート確定です。」'
  },
  {
    name: 'K様',
    role: '学生 / 20代',
    message: '「ハーブボールの温かさが最高です。ストレスが溜まっていたのですが、心も身体もすっきりしました。」'
  }
];

const checklist = [
  '当日は10分前のご来店をお願いしております。',
  'お着替え・タオル・アメニティは完備しております。',
  '体調不良時や妊娠中の方は事前にご相談ください。',
  'アレルギーがございましたらお申し付けください。'
];

const businessHours = [
  { day: '月曜日', hours: '11:00 - 22:00（最終受付 21:00）' },
  { day: '火曜日', hours: '11:00 - 22:00（最終受付 21:00）' },
  { day: '水曜日', hours: '定休日' },
  { day: '木曜日', hours: '11:00 - 22:00（最終受付 21:00）' },
  { day: '金曜日', hours: '11:00 - 22:00（最終受付 21:00）' },
  { day: '土曜日', hours: '10:00 - 20:00（最終受付 19:00）' },
  { day: '日曜日', hours: '10:00 - 20:00（最終受付 19:00）' }
];
---

<BaseLayout pageClass="home">
  <section class="hero shell" id="top">
    <div class="hero-pattern" aria-hidden="true"></div>
    <div class="hero-content">
      <p class="tag">Thai Massage Salon</p>
      <h1>心と身体を癒やす、<br>本格タイ古式マッサージ</h1>
      <p class="hero-sub">
        2000年の歴史を誇るタイ古式マッサージを、横浜で体験。資格を持つセラピストが、一人ひとりの身体に合わせて丁寧に施術いたします。
      </p>
      <div class="hero-actions">
        <a class="button" href="#reservation">今すぐ予約</a>
        <a class="button secondary" href="#menu">メニューを見る</a>
      </div>
      <div class="hero-metrics">
        {features.map((feature) => (
          <article class="metric-card card" data-label={feature.label}>
            <p class="metric-icon">{feature.icon}</p>
            <p class="metric-label">{feature.label}</p>
            <p class="metric-description">{feature.description}</p>
          </article>
        ))}
      </div>
    </div>
    <div class="hero-visual">
      <div class="visual-frame">
        <span class="visual-caption">静寂に包まれた施術ルーム</span>
        <div class="visual-gradient"></div>
      </div>
      <div class="visual-thumbs">
        <div>
          <p>タイ産ハーブボールとアロマオイルを使用した本格施術</p>
        </div>
        <div>
          <p>横浜元町よりアクセス良好。完全予約制でプライバシーも安心</p>
        </div>
      </div>
    </div>
  </section>

  <section class="shell section-gap" id="features">
    <header class="section-heading">
      <span>Our Features</span>
      <h2>本格的な技法と至福の空間</h2>
    </header>
    <div class="grid">
      {shopFeatures.map((feature) => (
        <article class="card before-after">
          <h3>{feature.title}</h3>
          <ul>
            {feature.points.map((point) => <li>{point}</li>)}
          </ul>
        </article>
      ))}
    </div>
  </section>

  <section class="shell section-gap" id="flow">
    <header class="section-heading">
      <span>Treatment Flow</span>
      <h2>施術の流れ</h2>
    </header>
    <div class="grid experience-grid">
      {treatmentSteps.map((step) => (
        <article class="card experience-card">
          <p class="step-icon">{step.icon}</p>
          <h3>{step.title}</h3>
          <p>{step.description}</p>
        </article>
      ))}
    </div>
  </section>

  <section class="dynamic shell section-gap" id="recommendation">
    <header class="section-heading">
      <span>Time Based Menu</span>
      <h2>時間帯別おすすめメニュー</h2>
    </header>
    <div class="dynamic-grid">
      {dailyRecommendations.map((scenario) => (
        <article class="card dynamic-card" data-time={scenario.time}>
          <p class="dynamic-time">{scenario.label}</p>
          <h3>{scenario.menu}</h3>
          <p>{scenario.detail}</p>
          <span class="dynamic-accent">{scenario.accent}</span>
        </article>
      ))}
    </div>
  </section>

  <section class="shell section-gap" id="menu">
    <header class="section-heading">
      <span>Menu</span>
      <h2>施術メニュー</h2>
    </header>
    <div class="grid course-grid">
      {courses.map((course) => (
        <article class="card course-card">
          <div class="course-header">
            <h3>{course.nameJP || course.name}</h3>
            <p class="course-meta">{course.duration} / {course.price}</p>
            <p class="course-ideal">{course.ideal}</p>
          </div>
          <ul>
            {course.effects.map((effect) => <li>{effect}</li>)}
          </ul>
          <p class="course-result">{course.result}</p>
          <a class="button secondary" href="#reservation">このメニューで予約</a>
        </article>
      ))}
    </div>
  </section>

  <section class="shell section-gap shop-info" id="info">
    <header class="section-heading">
      <span>Access & Hours</span>
      <h2>店舗情報</h2>
    </header>
    <div class="grid info-grid">
      <article class="card info-card">
        <h3>営業時間</h3>
        <dl class="hours-list">
          {businessHours.map((item) => (
            <div class="hours-item">
              <dt>{item.day}</dt>
              <dd>{item.hours}</dd>
            </div>
          ))}
        </dl>
      </article>
      <article class="card info-card">
        <h3>アクセス</h3>
        <p class="access-address">〒231-0861<br>神奈川県横浜市中区元町1-18-3<br>元町ビル3F</p>
        <p class="access-note">みなとみらい線「元町・中華街駅」より徒歩3分<br>JR「石川町駅」より徒歩8分</p>
      </article>
      <article class="card info-card">
        <h3>ご予約について</h3>
        <ul class="reservation-info">
          <li>完全予約制となります</li>
          <li>当日予約も可能（空き状況による）</li>
          <li>キャンセルは前日までにご連絡ください</li>
          <li>初回の方には特典ございます</li>
        </ul>
      </article>
    </div>
  </section>

  <section class="shell section-gap voice" id="voice">
    <header class="section-heading">
      <span>Voice</span>
      <h2>お客様の声</h2>
    </header>
    <div class="grid voice-grid">
      {voices.map((voice) => (
        <article class="card voice-card">
          <p class="voice-message">{voice.message}</p>
          <p class="voice-name">{voice.name}</p>
          <p class="voice-role">{voice.role}</p>
        </article>
      ))}
    </div>
  </section>

  <section class="shell section-gap reservation" id="reservation">
    <header class="section-heading">
      <span>Reservation</span>
      <h2>ご予約フォーム</h2>
    </header>
    <div class="reservation-wrapper">
      <div class="reservation-progress">
        <div class="progress-track" aria-hidden="true"></div>
        <ol>
          <li>
            <span>Step 01</span>
            <strong>メニューを選ぶ</strong>
            <p>お好みの施術メニューをお選びください。</p>
          </li>
          <li>
            <span>Step 02</span>
            <strong>ご希望日時を選択</strong>
            <p>ご都合の良い日時をご指定ください。</p>
          </li>
          <li>
            <span>Step 03</span>
            <strong>確認・送信</strong>
            <p>当日のご案内メールをお送りします。</p>
          </li>
        </ol>
      </div>
      <form class="reservation-form card" aria-labelledby="reservation-title">
        <h3 id="reservation-title">ご予約はこちら</h3>
        <p class="reservation-intro">
          ご希望の日時とメニューをご記入の上、お送りください。担当より折り返しご連絡いたします。
        </p>
        <label>
          お名前
          <input type="text" required />
        </label>
        <label>
          メールアドレス
          <input type="email" placeholder="you@example.com" required />
        </label>
        <label>
          電話番号
          <input type="tel" placeholder="090-1234-5678" required />
        </label>
        <label>
          ご希望日時
          <input type="datetime-local" required />
        </label>
        <label>
          メニュー
          <select required>
            <option value="">選択してください</option>
            <option value="60min">タイ古式マッサージ 60分</option>
            <option value="90min">ハーバルボールケア 90分</option>
            <option value="120min">アロマリラックス 120分</option>
          </select>
        </label>
        <label>
          ご希望・ご相談事項
          <textarea rows="4" placeholder="体調、アレルギー、重点的にほぐしたい部位などお気軽にご記入ください"></textarea>
        </label>
        <fieldset class="reservation-checklist">
          <legend>ご来店前の確認</legend>
          <ul>
            {checklist.map((item) => <li>{item}</li>)}
          </ul>
        </fieldset>
        <button class="button" type="submit">予約内容を送信する</button>
      </form>
    </div>
  </section>
</BaseLayout>

<style>
  .section-gap {
    padding-block: 4.5rem;
  }

  .hero {
    display: grid;
    gap: 3rem;
    padding-top: 5rem;
  }

  .hero-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle at 20% 20%, rgba(214, 199, 161, 0.18), transparent 55%),
      radial-gradient(circle at 80% 10%, rgba(202, 169, 105, 0.08), transparent 60%),
      linear-gradient(135deg, rgba(6, 78, 59, 0.15), rgba(11, 91, 68, 0));
    opacity: 0.9;
    z-index: -1;
  }

  .hero-content {
    display: grid;
    gap: 1.2rem;
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    margin: 0;
    font-size: clamp(2.15rem, 9vw, 3.6rem);
    line-height: 1.12;
    letter-spacing: 0.02em;
  }

  .hero-sub {
    margin: 0;
    font-size: 1.02rem;
    max-width: 38ch;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .hero-metrics {
    display: grid;
    gap: 1rem;
  }

  .metric-card {
    padding: 1.4rem;
  }

  .metric-value {
    margin: 0;
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-gold);
  }

  .metric-icon {
    margin: 0;
    font-size: 2.5rem;
  }

  .metric-label {
    margin: 0.2rem 0 0;
    font-family: var(--font-sans);
    letter-spacing: 0.12em;
    font-size: 0.8rem;
    text-transform: uppercase;
  }

  .metric-description {
    margin: 0.8rem 0 0;
    font-size: 0.92rem;
    color: rgba(255, 255, 255, 0.78);
  }

  .hero-visual {
    display: grid;
    gap: 1.5rem;
  }

  .visual-frame {
    position: relative;
    min-height: 260px;
    border-radius: 24px;
    overflow: hidden;
    border: 1px solid rgba(214, 199, 161, 0.18);
    background: linear-gradient(135deg, rgba(6, 78, 59, 0.9), rgba(15, 118, 110, 0.55));
  }

  .visual-gradient {
    position: absolute;
    inset: 0;
    background-image: linear-gradient(180deg, rgba(214, 199, 161, 0.15), rgba(12, 51, 41, 0.9)),
      url('https://images.unsplash.com/photo-1522335789203-aabd1fc54bc9?auto=format&fit=crop&w=900&q=80');
    background-size: cover;
    background-position: center;
    filter: saturate(0.72);
    mix-blend-mode: screen;
  }

  .visual-caption {
    position: absolute;
    bottom: 1.4rem;
    left: 1.4rem;
    padding: 0.55rem 1rem;
    border-radius: 999px;
    background: rgba(16, 35, 27, 0.7);
    border: 1px solid rgba(214, 199, 161, 0.42);
    font-family: var(--font-sans);
    font-size: 0.78rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
  }

  .visual-thumbs {
    display: grid;
    gap: 1rem;
  }

  .visual-thumbs div {
    padding: 1rem 1.2rem;
    border-left: 2px solid rgba(214, 199, 161, 0.35);
  }

  .before-after h3 {
    margin-top: 0;
    font-size: 1.2rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-sand);
  }

  .before-after ul {
    padding-left: 1rem;
    margin: 0.8rem 0 0;
    display: grid;
    gap: 0.65rem;
  }

  .concept {
    position: relative;
  }

  .concept-grid {
    display: grid;
    gap: 1.5rem;
  }

  .concept-card h3 {
    margin-top: 0;
    font-size: 1.3rem;
  }

  .palette {
    display: flex;
    gap: 0.6rem;
    flex-wrap: wrap;
  }

  .palette span {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 92px;
    height: 92px;
    border-radius: 16px;
    background: var(--swatch);
    font-size: 0.72rem;
    font-family: var(--font-sans);
    letter-spacing: 0.05em;
    box-shadow: inset 0 0 0 1px rgba(16, 35, 27, 0.15);
  }

  .concept-list {
    margin: 0;
    padding-left: 1rem;
    display: grid;
    gap: 0.6rem;
  }

  .interaction-note {
    display: grid;
    gap: 0.9rem;
    padding: 1rem 1.1rem;
    border-radius: 16px;
    background: rgba(7, 47, 37, 0.6);
  }

  .experience-grid {
    gap: 1.2rem;
  }

  .experience-card h3 {
    margin: 0.4rem 0 1rem;
    font-size: 1.35rem;
  }

  .experience-card .card-detail {
    margin-top: 1rem;
    font-size: 0.9rem;
    color: rgba(214, 199, 161, 0.7);
  }

  .step-icon {
    margin: 0 0 1rem;
    font-size: 3rem;
    text-align: center;
  }

  .dynamic-grid {
    display: grid;
    gap: 1.2rem;
  }

  .dynamic-card[data-time='Morning'] {
    border-left: 3px solid rgba(214, 199, 161, 0.35);
  }
  .dynamic-card[data-time='Day'] {
    border-left: 3px solid rgba(15, 118, 110, 0.55);
  }
  .dynamic-card[data-time='Night'] {
    border-left: 3px solid rgba(202, 169, 105, 0.65);
  }

  .dynamic-time {
    font-family: var(--font-sans);
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: rgba(214, 199, 161, 0.7);
  }

  .dynamic-card h3 {
    margin: 0.6rem 0 0.4rem;
    font-size: 1.4rem;
  }

  .dynamic-accent {
    display: inline-flex;
    margin-top: 1rem;
    padding: 0.45rem 0.9rem;
    border-radius: 999px;
    background: rgba(214, 199, 161, 0.12);
    border: 1px solid rgba(214, 199, 161, 0.2);
    font-family: var(--font-sans);
    font-size: 0.78rem;
    letter-spacing: 0.08em;
  }

  .course-grid {
    gap: 1.2rem;
  }

  .course-card h3 {
    margin: 0;
    font-size: 1.4rem;
  }

  .course-meta {
    margin: 0.4rem 0 0;
    font-family: var(--font-sans);
    font-size: 0.9rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(214, 199, 161, 0.8);
  }

  .course-ideal {
    margin: 0.6rem 0 1rem;
    font-size: 0.95rem;
    color: rgba(214, 199, 161, 0.7);
  }

  .course-card ul {
    margin: 0;
    padding-left: 1rem;
    display: grid;
    gap: 0.55rem;
  }

  .course-result {
    margin: 1rem 0 1.5rem;
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.82);
  }

  .results-grid {
    gap: 1.2rem;
  }

  .result-card h3 {
    margin-top: 0;
    font-size: 1.25rem;
  }

  .voice-grid {
    gap: 1.2rem;
  }

  .voice-card {
    background: rgba(16, 35, 27, 0.72);
    border-radius: 28px;
    padding: 2rem 1.6rem;
    position: relative;
  }

  .voice-card::before {
    content: '';
    position: absolute;
    inset: 18px;
    border-radius: 24px;
    border: 1px dashed rgba(214, 199, 161, 0.2);
    pointer-events: none;
  }

  .voice-message {
    margin: 0;
    font-size: 1rem;
  }

  .voice-name {
    margin: 1.2rem 0 0;
    font-family: var(--font-sans);
    letter-spacing: 0.14em;
    text-transform: uppercase;
